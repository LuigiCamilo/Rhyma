<div class="container">
<div class="register-photo">
    <div class="form-container">
        <div class="image-holder" style="background-image: url(<%= asset_path 'login_violin.jpg' %>); "></div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"}) do |f| %>
            <h2 class="text-center"><strong>Bienvenido!</strong></h2>
            <div class="form-group">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            label: false,
                            input_html: { class: "form-control", placeholder: "Nombre de Usuario", autocomplete: "email" } %>
            </div>
            <div class="form-group">
                <%= f.input :password,
                            required: false,
                            label: false,
                            input_html: { class: "form-control", placeholder: "ContraseÃ±a", autocomplete: "current-password" } %>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-between">
                    <div class="text-info">

                      <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <%= f.button :submit, "Entrar", class: "btn btn-success btn-block btn-info" %>
            </div>
        <% end %>
    </div>
</div>
