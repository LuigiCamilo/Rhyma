<div class="container">
<div class="register-photo">
    <div class="image-holder"></div>
    <div class="form-container">
         <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
            <h2 class="text-center"><strong>Registrate gratis aqui!</strong></h2>
            <div class="form-group">
                  <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, :error_html => { :id => "validates_presence_of"}%>
            </div>
            <div class="form-group">
              <%= f.input :first_name, label: "Nombre", autofocus: true, :error_html => { :id => "validates_length_of"} %>
            </div>
             <div class="form-group">
             <%= f.input :last_name, label: "Apellido", autofocus: true %>
            </div>
            <div class="form-group">
            <%= f.input :nickname, label: "Nombre de usuario", required: true, autofocus: true %>
            </div>
            <div class="form-group">
            <%= f.input :bio, label: "Bio", autofocus: true %>
            </div>
            <div class="form-group">
            <%= f.input :photo, label: "Foto", required: true, as: :file, input_html: { required: true } %>
            </div>
            <h2>Link de redes sociales</h2>
            <div class="form-group">
            <%= f.input :linkedin, label: "linkedin", autofocus: true %>
            </div>
            <div class="form-group">
            <%= f.input :instagram, label: "instagram", autofocus: true %>
            <div class="form-group">
            <%= f.input :tiktok, label: "tiktok", autofocus: true %>
            </div>
            <div class="form-group">
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-group">
            <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-between">
                    <div class="text-info"><%= render "devise/shared/links" %> </div>
                </div>
            </div>
            <div class="form-group">
            <%= f.button :submit, "Registrar", class: "btn btn-success btn-block btn-info" %>
            </div>
             <% end %>
    </div>
</div>
</div>
</div>
