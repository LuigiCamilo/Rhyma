<h1>Lectures#index</h1>
<p>Find me in app/views/courses/index.html.erb</p>
<div class="container">
  <h1 class="mt-4"> Lectures</h1>
  <div class="container mx-auto mt-4">
    <div class="row">
    <ul>
      <% @lectures.each do |lecture| %>
        <li><%= lecture.title %></li>
      <% end %>
      </ul>
    </div>
    <% if @lectures.length == 0 %>
      <p>No existen cursos publicados.</p>
    <% end %>
  </div>
</div>
