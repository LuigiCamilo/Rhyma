


<div class="row" style="margin-top:10px; margin-bottom:10px">
            <div class="col-md-5">
                <div class="row">
                    <div class="col-12 bg-white p-0 px-3 py-3 mb-3">
                        <div class="d-flex flex-column align-items-center">

                                 <% if current_user.photo.attached? %>
                                  <%= cl_image_tag current_user.photo.key, class: "img_profile", width: "100%" %>
                                 <% end %>
                            <p class="fw-bold h4 mt-3"><%= @user.nickname %></p>
                            <p class="text-muted">
                            <% fullName = @user.first_name + " "+ @user.last_name %>
                            <%=fullName%>
                            </p>
                            <p class="text-muted mb-3"><%= @user.bio %></p>
                        </div>
                    </div>
                    <div class="col-12 bg-white p-0 px-2 pb-3 mb-3">
                        <div class="d-flex justify-content-between border-bottom py-2 px-3">
                            <p><span class="fab fa-linkedin me-2"></span>linkedIn</p>
                             <%= link_to fullName, @user.linkedin %>
                        </div>

                        <div class="d-flex justify-content-between border-bottom py-2 px-3">
                            <p><span class="fab fa-tiktok me-2"></span>TikTok</p>
                            <%= @user.tiktok %>
                        </div>

                        <div class="d-flex justify-content-between border-bottom py-2 px-3">
                            <p><span class="fab fa-instagram me-2"></span>Instagram</p>
                            <%= @user.instagram %>
                        </div>

                    </div>
                </div>
            </div>




            <div class="col-md-7 ps-md-4">
                <div class="row">
                    <div class="col-12 bg-white px-3 mb-3 pb-3" style="overflow: scroll; max-height: 492px;">
                    <h4 class="pt-2 ms-1" >Mis Cursos</h4>
                    <%@user.courses.each do |course|%>
                        <%# <%= link_to "Ir al curso" course_path(course), style: "text-decoration: none; color: white;"%>
                        <div class="d-flex align-items-center justify-content-between border-bottom mb-2">
                        <div class="card-product" style="background: #D9731A; opacity: 0.8;">
                         <%= cl_image_tag course.photo.key if course.photo.attached? %>
                        <div class="card-product-infos">
                          <h2> <%=course.title%></h2>
                          <p>Fecha de creacion: <%=course.created_at%></p>
                          <%average_rating = Review.where(user_id: @user.id, course_id: course.id).average(:rating)%>
                          <%if average_rating.nil?  %>
                          <p style="text-align: rigth;">Rating 0%</p>
                          <%else%>
                          <p>Rating <%=average_rating%>%</p>
                          <%end%>
                          <div class="mb-3">
                          <p>
                            <%= link_to "Modificar", edit_course_path(course), class: "button salmon", style: "color: #ffffff;" %>
                            <%= link_to "Ir al curso", course_path(course), class: "button salmon", style: "color: #ffffff;" %>
                          </p>

                          </div>

                        </div>

                      </div>
                    </div>


                    <% end %>






                </div>
</div>
</div>
</div>
