<h1>Courses#index</h1>
<p>Find me in app/views/courses/index.html.erb</p>
<div class="container">
  <h1 class="mt-4"> Curses</h1>
  <div class="container mx-auto mt-4">
    <div class="row">
      <% @courses.each do |curse| %>
        <%= render curse %>
      <% end %>
    </div>
    <% if @courses.length == 0 %>
      <p>No existen cursos publicados.</p>
    <% end %>
  </div>
</div>
