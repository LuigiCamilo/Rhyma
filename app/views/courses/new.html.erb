<div class="register-photo">
  <div class="image-holder"></div>
  <div class="form-container">
    <%= simple_form_for @course, html: { class: "contact-form" } do |f| %>
      <h2 class="text-center"><strong>Nuevo Curso</strong></h2>
      <div class="form-group">
        <%= f.input :title, label: "Nombre del curso", input_html: { class: "form-control", required: true } %>
      </div>
      <div class="form-group">
        <%= f.input :theme_id, label: "Tema",collection: Theme.all.map { |theme| [theme.title, theme.id] }, prompt: 'Elige un tema', input_html: { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.input :photo, label: "Foto", as: :file, input_html: { id:"photo-product", class: "form-control", required: true } %>
      </div>
      <div class="form-group">
        <%= f.input :description, as: :rich_text_area, label: "DescripciÃ³n", input_html: { required: true } %>
      </div>
      <div class="form-group">
        <%= f.button :submit, "Crear", class: "btn btn-warning btn-block", id: "create_product"%>
      </div>
    <% end %>
  </div>
</div>
<script>
const foto = document.querySelector("#photo-product");
const submit = document.querySelector("#create_product.btn");
console.log(submit);
submit.addEventListener("click", (event) => {
  if (foto.files.length === 0) {
     event.preventDefault();
     alert("Debes ingresar una fotografia de tu Curso");
     console.log(foto);
  }
});
</script>
